(require lispy.macros *)
(from functools [reduce])

(def is-pythagorean? [a b c]
  (return (== (+ (* a a) (* b b)) (* c c))))

(def find-triplet [s]
  (for i (range 1 (- s 1))
    (for j (range (+ i 1) (- s 1 i))
      (= k (- s i j))
      (if (is-pythagorean? i j k)
          (return [i j k]))))
  (return 0))

(print (reduce (lambda [x y] (* x y)) (find-triplet 1000)))
